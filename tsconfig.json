{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "declaration": false,
    "outDir": "./netlify/functions",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules", "netlify"]
}
